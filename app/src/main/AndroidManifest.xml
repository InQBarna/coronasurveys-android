<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coronasurveys.mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.coronasurveys.mobile.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoronaSurveys">
        <activity android:name="com.coronasurveys.mobile.presentation.countrylist.CountryListActivity"
            android:parentActivityName="com.coronasurveys.mobile.presentation.main.MainActivity"/>
        <activity
            android:name="com.coronasurveys.mobile.preferences.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="com.coronasurveys.mobile.presentation.main.MainActivity"/>
        <activity
            android:name="com.coronasurveys.mobile.presentation.survey.WebViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.coronasurveys.mobile.presentation.main.MainActivity" />
        <activity android:name="com.coronasurveys.mobile.presentation.main.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.coronasurveys.mobile.ReminderBroadcast" />
    </application>

</manifest>